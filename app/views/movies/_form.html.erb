<%= form_for(@movie) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true %><br><br>
  <% Movie::GENRE.each do |v| %>

      <%= f.check_box(:genres, { :multiple => true, checked: checked(v) }, v) %>
       <%= f.label :genres, v.humanize %>
  <% end %><br><br>
  <%= f.select :year, (1900..2019), required: true %><br><br>

  <%= f.label :director %>
  <%= f.text_field :director %><br><br>

  <%= f.label :main_star %>
  <%= f.text_field :main_star %><br><br>

  <%= f.label :description %>
  <%= f.text_field :description %><br><br>

  <%= f.submit %>
  <%= link_to "Back", movies_path %>
<% end %>
